<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{imageURL}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">
                        <p style="font-weight: bold;">Fecha</p>{{fecha}}
                    </p>
                    <p class="m-2">
                        <p style="font-weight: bold;">Descripci√≥n</p>{{description}}
                    </p>
                    <p>{{timeago create_at}}</p>
                    <a href="/semillero/delete/{{id}}" class="btn btn-danger">Eliminar
                    </a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar </a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay semilleros guardados aun</p>
                    <a href="/links/add" class="btn btn-success">Crea uno</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>