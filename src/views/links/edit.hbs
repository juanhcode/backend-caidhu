<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/semillero/edit/{{link.id}}" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Titulo</label>
                            <input type="text" name="title" value="{{link.title}}" id="title" class="form-control" placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="description">Descripción</label>
                            <textarea name="description" rows="2" id="description" class="form-control"
                                placeholder="Descripción">{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="fecha">Fecha</label>
                            <input type="date" name="fecha" id="fecha" class="form-control" value="{{link.fecha}}">
                        </div>
                        <div class="input-group mb-3">
                            <div>
                                <input type="file" name="image" id="inputGroupFile01">
                                <label for="inputGroupFile01"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>